<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_news"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@color/colorWhite">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/ivImage"
            android:scaleType="centerCrop"
            android:foreground="@drawable/white_gradient_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_small"
        android:orientation="horizontal">
        <com.yeyintkoko.techtricity.custom_control.MyanTextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textSize="@dimen/txt_size_normal"
            android:textColor="@color/colorTextColorSecondary"
            android:maxLines="1"
            android:layout_weight="1"/>
        <com.yeyintkoko.techtricity.custom_control.MyanTextView
            android:id="@+id/tv_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textSize="@dimen/txt_size_normal"
            android:textColor="@color/colorTextColorSecondary"
            android:maxLines="1"
            android:layout_weight="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">
                <com.yeyintkoko.techtricity.custom_control.MyanBoldTextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_large"
                    android:layout_weight="9"
                    android:textColor="@color/colorTextColorPrimary"/>
                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="0dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_share"
                    android:layout_weight="1"/>
            </LinearLayout>

            <com.yeyintkoko.techtricity.custom_control.MyanTextView
                android:id="@+id/tv_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_normal"
                android:textSize="@dimen/txt_size_normal"
                android:textColor="@color/colorTextColorSecondary"
                android:maxLines="5"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>